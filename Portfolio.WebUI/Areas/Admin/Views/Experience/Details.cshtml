@model Experience
@{
    ViewData["Title"] = "Details";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Bootstrap Basic Tables</h4>
                    <span>
                        lorem ipsum dolor sit amet, consectetur adipisicing
                        elit
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Bootstrap Table</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Basic Table</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Basic table card start -->
    <div class="card">
        <div class="card-header">
            <h5>Basic Table</h5>
            <span>use class <code>table</code> inside table element</span>

        </div>
        <div class="card-block table-border-style">
            <div class="card-block">
                <h4 class="sub-title">Basic Inputs</h4>
                <div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.Name
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Description"></label>
                        <div class="col-sm-10">
                            <div class="form-control" style="height:auto;">
                                @Model.Description.ToPlainText()
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="CompanyName"></label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.CompanyName
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="CompanyLocation"></label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.CompanyLocation
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="CompanyImagePath"></label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @if (Model.CompanyImagePath != null)
                                {
                                    <label class="image-viewer" for="choose-image" style="background-image:url(/uploads/images/@Model.CompanyImagePath)"></label>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="UserId"></label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.UserId
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="ExperienceType"></label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.ExperienceType
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="StartDate"></label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.StartDate
                            </p>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-12 d-flex justify-content-end">
                            <a class="btn btn-info mr-2" asp-action="edit" asp-route-id="@Model.Id">Edit</a>
                            <a class="btn btn-info" asp-action="index">Go Back</a>
                        </div>
                    </div>
                </div>

            </div>
            <!-- Basic table card end -->
        </div>
    </div>
</div>

